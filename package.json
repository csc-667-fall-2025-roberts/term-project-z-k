{
  "name": "term-project-z-k",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start:dev": "nodemon --exec ts-node src/backend/server.ts",
    "build": "tsc",
    "start": "node dist/backend/server.js",
    "test": "ts-node src/backend/test/test-all.ts",
    "test:watch": "nodemon --exec ts-node src/backend/test/test-all.ts",
    "migrate:up": "ts-node src/backend/db/migrate.ts up",
    "migrate:down": "ts-node src/backend/db/migrate.ts down",
    "migrate:status": "ts-node src/backend/db/migrate-status.ts",
    "db:reset": "npm run db:clear && npm run migrate:up",
    "db:setup": "node setup-migrations.js",
    "db:populate": "ts-node src/backend/db/populate-db.ts",
    "db:clear": "node -e \"const fs = require('fs'); if (fs.existsSync('crazy_eights.db')) fs.unlinkSync('crazy_eights.db'); console.log('Database cleared');\"",
    "db:fresh": "npm run db:clear && npm run migrate:up && npm run db:populate",
    "test:migrations": "ts-node src/backend/test/test-migrations.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.5.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prettier-plugin-ejs": "^1.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "**/*": "prettier --plugin=prettier-plugin-ejs --write --ignore-unknown"
  }
}
